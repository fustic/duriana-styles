@import 'nib'
@import 'variables'
@import 'variables_desktop'

header
  height 64px
  background color1
  color #fff
  z-index 100
  position fixed
  width 100%
  top 0
  min-width wrapmin
  .&_logo
    width 120px
    height 64px
    position absolute
    left 50%
    top 0
    margin 0 0 0 -60px
    display block
    background url(/images/logo.png) no-repeat 0 center
    text-indent -10000em
    z-index 1

  .&_menu
    position absolute
    left 0
    top 0
    height 64px
    width 100%
    z-index 0

    &_link
      float left
      margin 0 40px 0 0
      &:hover,
      &.active
        border-bottom 5px solid darken(color1,20%)
      &>a
        display block
        height 59px
        line-height 64px
        color #fff
        text-transform uppercase
        font-size 15px
        [class*="icon-"]
          font-size 19px
          vertical-align -2px
          margin 0 7px 0 0px
        .icon-sell
          font-size 16px
        .icon-more
          font-size 4px
          vertical-align 3px
        &.submenu_link:after
          icon_durian "\e70a"
          font-size 6px
          margin 0 0 0 6px
      &:hover
        .header_menu_submenu
          display block


    &_submenu
      padding 35px 39px
      display none
      position absolute
      left 0
      top 100%
      width 100%
      background #fff
      border 1px solid bdcolor
      box-sizing border-box
      z-index 100
    @media screen and (max-width: 1120px)
      &_submenu
        padding 30px 20px

.shop_category_list
  display flex
  flex-wrap wrap
  justify-content flex-start
  li
    width 25%
    padding-right 15px
    box-sizing border-box
    margin 0 0 27px
  a
    display block
    font-size 15px
    text-transform uppercase
    color ctext
    &:hover
      color color2
      [class*="icon-category-"]
        color color2

  [class*="icon-category-"]
    font-size 50px
    color color1
    margin 0 5% 0 0
    vertical-align -15px
    transition .2s


.submenu_more
  color ctext
  clearfix()
  .left
    width 59%
    float left
    .title
      color color1
      text-transform uppercase
      font-weight 500
      line-height 20px
      margin 0 0 20px
      &:after
        content ''
        height 2px
        width 70px
        background color1
        display block
        margin 10px 0 0

  .get_app
    width 40%
    float left
    .select2-container
      width 40%
      float left
      & ~ input
        width 60%
        border-left-color transparent
        &:focus
          border-left-color color1

    .button
      font-size 16px
      font-weight 600
      margin 10px 0 60px
      width 100%
    .store_button
      width 100%
      margin 0 0 10px
  .signup
    float right
    width 40%
    margin 0 0 50px
    .title
      padding-top 20px
    .button
      font-size 16px
      font-weight 600
      margin 10px 0 0
  .right
    float right
    width 33%
    border-left 1px solid bdcolor
    padding-left 6%
    box-sizing border-box
  .more_menu
    padding 20px 0
    li
      margin 0 0 15px
      &.separator
        height 20px
      a
        font-size 16px
  .madein
    clear both
    overflow hidden
    padding 10px 0 0
    right 0px
    bottom -20px
    font-style italic
    font-size 16px
    font-weight 300
    text-align right
    .durian
      width 17px
      height 23px
      display inline-block
      background url(/images/logo_small.png) no-repeat 0 0
      vertical-align -2px
      margin 0 3px

.get_app_but
  float right
  margin 11px 0 0
  z-index 1
  [class*="icon-"]
    font-size 20px
    vertical-align -3px
    margin 0 20px 0 -10px
.header_profile
  float right
  margin 13px 0 0 25px

  &_link
    display block
  &_img
    width 40px
    height 40px
    overflow hidden
    display inline-block
    vertical-align middle
    border-radius 50%
    img
      width 100%
      height auto
  &_name
    color #fff
    display inline-block
    vertical-align middle
    font-size 16px
.gosocial
  float right
  width 40%
  a
    display inline-block
    width 52px
    height 52px
    margin 0 5px 0 0
    color color1
    &:hover
      color color2
    &:before
      icon_durian "\e700"
      font-size 52px

    &.facebook:before
      content "\e700"
    &.twitter:before
      content "\e701"
    &.instagram:before
      content "\e702"
.show_header_menu
  display none
  position absolute
  left 0
  top 50%
  color #fff
  margin-top -10px
  &:before
    font-size 20px

.dropdown_link + .dropdown_block
  display none

.webui-popover
  position fixed
  top 54px !important

.webui-popover-content
  ul
    margin -15px -20px
    li
      a
        display block
        padding 10px 12px
        &:hover
          background color1
          color #fff

nav
  width 100%
  background #F5F5F5
  margin 0 0 30px
  z-index 10

  &.fixed
    position fixed
    top 64px
  .&_search
    display inline-block
    margin 7px 0
    vertical-align top
    &:after
      icon_durian '\e706'
      font-size 17px
      position absolute
      right 13px
      top 12px
      color #aaa
    .select2-container
      float left
      &~input
        margin-left -1px
    input[type='search'], input[type='text']
      padding-right 40px
      width 200px


    .select2-choice
      text-transform uppercase

  .&_sort
    display inline-block
    margin 0 0 0 36px
    vertical-align top
    li
      float left
      border-bottom 5px solid transparent
      &.active
        border-bottom-color color2
        a
          color color2
      &:hover
        a
          color color2
    a
      height 51px
      display block
      padding 0 20px
      line-height 56px
      text-transform uppercase
      color #9C9C9C
      letter-spacing 1px
aside
  display none
  position fixed
  top 57px
  right 0
  left 0
  bottom 0
  background rgba(0,0,0,0.8)
  z-index 200
  opacity 0
  transition opacity .3s
  &.open_aside
    opacity 1

.aside_back
  background #fff
  position absolute
  top 0
  height 100%
  width 90%
  left 0

.aside_search
  display block
  margin 0
  border-bottom 2px solid color1
  padding 1px 0 0
  overflow hidden
  clearfix()
  &:after
    icon_durian '\e706'
    font-size 17px
    position absolute
    right 13px
    top 12px
    color #aaa
  .select2-container
    float left
    &~input
      margin-left -1px
  input[type='search'], input[type='text']
    padding-right 40px
    width 100%
    border-radius 0
    border none
  .select2-container
    width 100%
  .select2-choice
    text-transform uppercase
  .columns.select
    width 31%
  .columns.text
    width 69%
aside .menu_left
  &>li
    border-bottom 1px solid color1
    &>a
      display block
      padding 15px
      color color1
      text-transform uppercase
      font-size 18px
      position relative
      &>[class*="icon"]
        width 30px
        display inline-block
      &>[class*="more"]
        font-size 4px
        vertical-align 5px
    .submenu_link:after
      icon_durian "\e710"
      font-size 12px
      position absolute
      right 14px
      top 50%
      margin-top -7px


  .menu_left_submenu
    display none
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background #fff
    z-index 1000
    &.active
      display block !important
  .menu_left_submenu_content
    overflow auto
    -webkit-overflow-scrolling touch
    overflow-scrolling touch
    box-sizing border-box
    height 100%
    .shop_category_list
      height 80%
      overflow auto
      li
        width: 100%

  .back_menu
    display block
    padding 15px
    color color1
    text-transform uppercase
    font-size 18px
    position relative
    border-bottom 1px solid color1
    &>[class*="icon"]
      width 30px
      display inline-block
      font-size 20px
    &>[class*="more"]
      font-size 4px
      vertical-align 5px
    &:before
      icon_durian "\e710"
      font-size 12px
      transform rotate(180deg)
      margin-right 10px

.header_menu_submenu.active
  display block !important

.submenu_sell
  padding 15px
  overflow auto
  -webkit-overflow-scrolling touch
  overflow-scrolling touch
  h1
    color color1
    font-size 19px
    margin 0 0 10px
    text-align center
    background url(/images/popup_getapp_backphones.png) no-repeat center 0
    background-size 40% auto
    padding 130px 0 0
  h3
    font-size 14px
    color #999
    margin 0 0 20px
    text-align center
  .store_download
    text-align center


aside .gosocial
  position absolute
  bottom 0
  left 0
  float none
  width 100%
  border-top 1px solid color1
  padding 14px 14px
  box-sizing border-box
  display none
  &.open_aside
    display: block
  .title
    color color1
    text-transform uppercase
    padding 0 0 10px

