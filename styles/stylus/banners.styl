.banner_mobile
  display none
  height 129px
  background url(/images/banner_mobile.jpg) no-repeat 0 0
  background-size 100%
  padding 25px 15px
  box-sizing border-box
  margin-top 65px
  h1
    font-size 12px
    text-transform uppercase
    margin 0 0 10px
  h3
    font-size 9px
    color #999
.app_mobile
  display none
  padding 25px 20px 20px 120px
  box-sizing border-box
  background url(/images/phone_banner_mobile.jpg) no-repeat 20px 20px
  background-size 82px 150px
  h2
    color color1
    font-size 16px
    margin 0 0 10px
  p
    font-size 13px
    line-height 1.4
    margin 0 0 15px
