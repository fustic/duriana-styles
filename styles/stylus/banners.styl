@import 'nib'
@import 'variables'
@import 'variables_desktop'

.slideshow
  margin-top 140px
  margin-bottom 15px
  height 300px
  overflow hidden
  h1
    position absolute
    font-size 36px
    color #fff
    font-weight 600
  h3
    position absolute
    text-align center
    font-size 18px
    font-weight normal
    color #fff
  .slide_img
    z-index 0
  .slide_store
    position absolute
    a
      display inline-block
      width 160px
      height 50px
      margin 0 10px 0 0
      border 2px solid #fff
      border-radius 8px
      &:hover
        background-color rgba(255,255,255,0.1)
    &_appstore
      background url(/images/appstore_w.svg) no-repeat center
    &_googleplay
      background url(/images/googleplay_w.svg) no-repeat center

  .item1
    h1
      top 60px
      left 50px
    h3
      width 350px
      top 110px
      left 115px
      color #000
    .slide_store
      top 187px
      left 113px
  .item2
    h1
      width 100%
      text-align center
      top 60px
    h3
      font-size 24px
      width 350px
      left 50%
      margin-left -175px
      top 115px
    .slide_store
      width 100%
      top 190px
      text-align center
  .item3
