@import 'nib'
@import 'variables'
@import 'variables_desktop'

.user_id_photo
  height 350px
  background-position 0 0
  background-repeat no-repeat
  background-size cover
  margin-top -30px
  &:after
    display block
    width 100%
    height 100px
    position absolute
    bottom 0
    left 0
    content ''
    background linear-gradient(top, rgba(0,0,0,0), rgba(0,0,0,0.5))

.user_id_photo_img
  position absolute
  left 0
  bottom 50px
  width 150px
  height 150px
  box-sizing border-box
  border-radius 50%
  border 2px solid #fff
  overflow hidden
  background-size cover
  background-repeat no-repeat
  z-index 10
.user_id_name
  position absolute
  left 165px
  bottom 50px
  font-size 35px
  color #fff
  background-position center
  z-index 10

.user_id_nav_button
  display inline-block
  vertical-align top
  float right
  padding 6px 0 0
  .button
    padding 0 50px

.user_id_social_share
  text-align center
  color #999
  p
    margin 0 0 10px
    line-height 20px
.user_id_info
  padding 0!important
  color #999
  &>div
    padding 10px 15px
    border-bottom 1px solid bdcolor
.user_id_info_desc
  p
    margin 5px 0
.user_id_info_address
  text-align center
  [class^="icon-"]
    &:before
      font-size 24px
      vertical-align middle
      margin-right 5px
.user_id_info_follow
  display flex
  justify-content space-around
  a
    text-align center
    color color1
    text-transform uppercase
    font-size 13px
    line-height 20px
    &:hover
      color lighten(color1,20%)

.user_id_products
  .three
    float right
  .nine
    float left
    margin-left 0


.rating
  unicode-bidi bidi-override
  text-align center
  &>span
    display inline-block
    position relative
    width 1.1em
  &>span.active
    color: #e3cf7a
  &>span.active:before, &>span.active ~ span.active:before
    content "\2605"
    position absolute
